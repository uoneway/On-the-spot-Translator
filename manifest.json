{
  "name": "On the spot Translator",
  "version": "0.1.0",
  "manifest_version": 2,
  "description": "Just click the text, and get the translation right below which keeps named entity in the original text.",
  "default_locale": "en",
  
  "permissions" : [
    "storage",
    "activeTab"
  ],

  "browser_action": {
    "default_icon": "images/icon.png", 
    "default_popup": "options.html",
    "default_title": "On the spot Translator"
  },
  
  "icons" : {
    "48" : "images/icon.png"
  },

  "background": {
		"scripts": ["background.js",
      "./external_modules/axios.min.js"]
	},
  
  "content_scripts": [
        {
            "matches": [
              "<all_urls>"
            ],
            "js": [
                "./external_modules/jquery-2.2.0.min.js",
                "content.js"
            ],
            "run_at" : "document_start"
        }
    ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}
